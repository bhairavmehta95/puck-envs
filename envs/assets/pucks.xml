<mujoco model="pucks">
    <compiler inertiafromgeom="true" angle="radian" coordinate="local"/>
    <custom>
        <numeric name="frame_skip" data="1"/>
    </custom>
    <option timestep="0.001" gravity="0 0 0" iterations="20" integrator="Euler"/>

    <default>
        <!-- <joint armature='0.04' damping="1" limited="true"/> -->
        <geom friction="0. 0. 0."/>
    </default>

    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
        <geom type="plane" pos="0 0.5 -0.1" size="2 2 0.1" contype="1" conaffinity="1"/>
        <body name="object1" pos="0 0 -0.1">
            <!--<geom rgba="1. 1. 1. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="1" conaffinity="1"/>-->
            <geom rgba="1. 1. 1. 1" type="cylinder" size="0.05 0.05 0.05" density='0.5' contype="1" conaffinity="1"/>
            <joint name="obj1_slidex" type="slide" pos="0.025 0.025 0.025" axis="1 0 0" range="-10.3213 10.3"/>
            <joint name="obj1_slidey" type="slide" pos="0.025 0.025 0.025" axis="0 1 0" range="-10.3213 10.3"/>
        </body>

        <body name="object2" pos="0.5 0 -0.1">
            <!--<geom rgba="1. 1. 1. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="1" conaffinity="1"/>-->
            <geom rgba="1. 1. 1. 1" type="cylinder" size="0.05 0.05 0.05" density='0.5' contype="1" conaffinity="1"/>
            <joint name="obj2_slidex" type="slide" pos="0.025 0.025 0.025" axis="1 0 0" range="-10.3213 10.3"/>
            <joint name="obj2_slidey" type="slide" pos="0.025 0.025 0.025" axis="0 1 0" range="-10.3213 10.3"/>
        </body>

    </worldbody>

    
    <actuator>
        <motor joint="obj1_slidex" ctrlrange="-1 1" ctrllimited="true"/>
        <motor joint="obj1_slidey" ctrlrange="-1 1" ctrllimited="true"/>
        <motor joint="obj2_slidex" ctrlrange="-1 1" ctrllimited="true"/>
        <motor joint="obj2_slidey" ctrlrange="-1 1" ctrllimited="true"/>
    </actuator>
</mujoco>